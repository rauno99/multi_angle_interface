<?xml version="1.0"?>
<launch>
 <group ns="camera1">
  <node name="usb_cam1" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video2" />
    <param name="image_width" value="1440" />
    <param name="image_height" value="1440" />
    <param name="pixel_format" value="mjpeg" />
    <param name="camera_frame_id" value="yuyv1" />
    <param name="io_method" value="mmap"/>
  </node>
  <node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="/fisheye_camera/left/image_raw"/>
    <param name="autosize" value="true" />
  </node>
 </group>

<group ns="camera2">
  <node name="usb_cam2" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video4" />
    <param name="image_width" value="1440" />
    <param name="image_height" value="1440" />
    <param name="pixel_format" value="mjpeg" />
    <param name="camera_frame_id" value="yuyv2" />
    <param name="io_method" value="mmap"/>
  </node>
  <node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="/fisheye_camera/right/image_raw"/>
    <param name="autosize" value="true" />
  </node>
 </group>
</launch>
